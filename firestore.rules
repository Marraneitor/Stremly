rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ─── Helper: owner ────────────────────────────────────────
    function isOwner() {
      return request.auth != null
          && request.auth.token.email == 'yoelskygold@gmail.com';
    }

    // ─── Denegar todo por defecto ─────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }

    // ─── Cuentas de streaming ─────────────────────────────────
    match /cuentas/{cuentaId} {
      allow read:          if request.auth != null
                            && (resource.data.uid == request.auth.uid || isOwner());
      allow update, delete: if request.auth != null
                             && resource.data.uid == request.auth.uid;
      allow create:        if request.auth != null
                            && request.resource.data.uid == request.auth.uid;
    }

    // ─── Clientes ─────────────────────────────────────────────
    match /clientes/{clienteId} {
      allow read:          if request.auth != null
                            && (resource.data.uid == request.auth.uid || isOwner());
      allow update, delete: if request.auth != null
                             && resource.data.uid == request.auth.uid;
      allow create:        if request.auth != null
                            && request.resource.data.uid == request.auth.uid;
    }

    // ─── Movimientos / Pagos ──────────────────────────────────
    match /movimientos/{movimientoId} {
      allow read:          if request.auth != null
                            && (resource.data.uid == request.auth.uid || isOwner());
      allow update, delete: if request.auth != null
                             && resource.data.uid == request.auth.uid;
      allow create:        if request.auth != null
                            && request.resource.data.uid == request.auth.uid;
    }

    // ─── Perfil de usuario ────────────────────────────────────
    match /usuarios/{userId} {
      allow read:  if request.auth != null
                    && (request.auth.uid == userId || isOwner());
      allow write: if request.auth != null
                    && request.auth.uid == userId;
    }

    // ─── Configuración del Chatbot ────────────────────────────
    match /chatbot_config/{userId} {
      allow read, write: if request.auth != null
                          && request.auth.uid == userId;
    }
  }
}
